    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="#"><i class="fa fa-home"></i> Home</a>
                    <span>Shop</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section Begin -->

<!-- Product Shop Section Begin -->
<section class="product-shop spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-8 order-2 order-lg-1 produts-sidebar-filter">
                <div class="filter-widget">
                    <h4 class="fw-title">League</h4>
                    <ul class="filter-catagories">
                        {{#each leagues}}
                        <li><a href="/product/leagues/{{this.slug}}">{{this.name}}</a></li>
                        {{/each}}
                    </ul>
                </div>
                <div class="filter-widget">
                    <h4 class="fw-title">Club</h4>
                    <ul class="filter-catagories">
                        {{#each clubs}}
                        <li><a href="/product/clubs/{{this.slug}}">{{this.name}}</a></li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="col-lg-9 order-1 order-lg-2">
                <div class="product-show-option">
                    <div class="row">
                        <div class="col-lg-7 col-md-7">
                            <div class="select-option">
                                <div class="dropdown show">
                                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Sắp Xếp
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item" href="/product{{link}}">Mặc định</a>
                                        <a class="dropdown-item" href="/product{{link}}?_sort&column=price&type=asc">Tăng</a>
                                        <a class="dropdown-item" href="/product{{link}}?_sort&column=price&type=desc">Giảm</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="data-container">
                        <div class="product-list">
                            <div class="row">
                                {{#each products}}
                                <div class="col-lg-4 col-sm-6">
                                    <div class="product-item">
                                        <div class="pi-pic">
                                            <img src="{{this.image}}" alt="{{this.name}}">
                                            <div class="icon">
                                                <i class="icon_heart_alt"></i>
                                            </div>
                                            <ul>
                                                <li class="w-icon add-to-cart active"><a href="/product/add-to-cart/{{this._id}}"><i
                                                            class="icon_bag_alt"></i></a></li>
                                                <li class="quick-view"><a href="/product/{{this.slug}}">+ Quick View</a>
                                                </li>
                                                {{!-- <li class="w-icon"><a href="#"><i class="fa fa-random"></i></a></li> --}}
                                            </ul>
                                        </div>
                                        <div class="pi-text">
                                            <a href="#">
                                                <h5>{{this.name}}</h5>
                                            </a>
                                            <div class="product-price">{{this.price}}.000đ</div>
                                        </div>
                                    </div>
                                </div>
                                {{else}}
                                <h2 class="mb-4">No products matched</h2>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <nav aria-label="Page navigation example" class="d-flex justify-content-center">
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" aria-label="Previous" id="btn_prev">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item"><a class="page-link page-link-inner" href="#">1</a></li>
                            <li class="page-item"><a class="page-link page-link-inner" href="#">2</a></li>
                            <li class="page-item"><a class="page-link page-link-inner" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" aria-label="Next" id="btn_next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                        <div id="totalPage" style="display: none;">{{totalPage}}</div>
                        <div id="currentPage" style="display: none;">{{page}}</div>
                    </nav>
                </div>
            </div>
        </div>
</section>
<!-- Product Shop Section End -->