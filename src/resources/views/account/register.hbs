    <!-- Register Section Begin -->
    <div class="register-login-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="register-form">
                        <h2>Register</h2>
                        <form action="account/register" method="post">
                            <div class="group-input">
                                <label for="firstname">First Name</label>
                                <input type="text" id="firstname" required name="firstname" minlength="3">
                            </div>
                            <div class="group-input">
                                <label for="lastname">Last Name</label>
                                <input type="text" id="lastname" required name="lastname" minlength="3">
                            </div>
                            <div class="group-input">
                                <label for="phonenumber">Phone Number</label>
                                <input type="number" id="phonenumber" required name="phonenumber" minlength="10">
                            </div>
                            <div class="group-input">
                                <label for="address">Address</label>
                                <input type="text" id="address" required name="address" minlength="3">
                            </div>
                            <div class="group-input">
                                <label for="username">Email address *</label>
                                <input type="email" id="username" required name="email" minlength="7">
                            </div>
                            <div class="group-input">
                                <label for="pass">Password *</label>
                                <input type="password" id="pass" required name="password" minlength="4">
                            </div>
                            <button type="submit" class="site-btn register-btn">REGISTER</button>
                        </form>
                        <div class="switch-login">
                            <a href="account/login" class="or-login">Or Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Register Form Section End -->
